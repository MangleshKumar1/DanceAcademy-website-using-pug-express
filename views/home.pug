extends base.pug

block scripts
  script(src='/static/index.js')

block style  
   style
      include ../static/style.css


block content 

    section#introSection 
        div  Welcome to Our Dance Academy
        div.small  Eat  Sleep  Dance  Repeat   
    
    section#missionSection 
        h2 Our mission
        div
            div.card#card1
                h3 Dance perfection 
                div.card-box
                    div.card-img 
                        img(src="../static/bg-m1.png")
                    div.card-content 
                        p This is the best dance academy
            div.card#card2
                h3 Dance the way you like
                div.card-box
                    div.card-img 
                        img(src="../static/bg-m2.png")
                    div.card-content 
                        p Learn Dance you likes
            div.card#card3
                h3 Expert teaching 
                div.card-box
                    div.card-img 
                        img(src="../static/bg-m3.png")
                    div.card-content 
                        p Professional expert teaching

    section#sponsorsSection 
        h2 Our sponsors
        div#sponsors 
            img(src="../static/google.png", alt="sponsors" ,class="spimage")
            img(src="../static/meta.png", alt="sponsors" ,class="spimage")
